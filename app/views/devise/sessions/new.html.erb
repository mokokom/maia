<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to :back do %>
  <i class="fas fa-angle-left light-gray"></i>
  <% end %>
</div>
<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-8">
      <h2 class="text-center mt-1 mb-5">ma√èa</h2>
      <!-- <div class="connexion-container"> -->
      <h3 class="text-center mb-5"><span class="underline-title">Connexion</span> </h3>
      <!-- <div class="underline"></div> -->
      <!-- </div> -->
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                label: false,
                placeholder: 'Email',
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                label: false,
                placeholder: 'Mot de passe',
                required: false,
                input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
      <div class="form-actions text-center mt-5">
        <%= f.button :submit, "Connexion", class: "shadow-sm p-2 px-3 mb-3 bg-white rounded-pill border-0" %>
      </div>
      <% end %>
      <div class="d-flex justify-content-center align-items-center flex-column mt-5">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
