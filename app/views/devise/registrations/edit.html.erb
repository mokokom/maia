<div class="container-bg-pink">
  <div class="container-fluid">
    <div class="row justify-content-center mt-5">
      <div class="col-10">
        <%# <h2 class="text-center mt-5 mb-5">maÏa</h2> %>
        <div class="d-flex justify-content-center mt-5">
          <svg width="30%" height="100%" viewBox="0 0 383 179" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" xml:space="preserve" xmlns:serif="http://www.serif.com/" style="fill-rule:evenodd;clip-rule:evenodd;stroke-linejoin:round;stroke-miterlimit:2; margin-bottom:2rem">
            <g transform="matrix(1,0,0,1,-212,-314.302)">
              <g>
                <g transform="matrix(1.26,0,0,1.26,-197.541,-114.32)">
                  <circle class="circle-logo" cx="562.333" cy="415.333" r="66.667" style="fill:rgb(255,109,109);"/>
                </g>
                <g transform="matrix(11.5424,0,0,11.5424,-1708.43,-4274.27)">
                  <text x="165.348px" y="408.315px" style="font-family:'AvenirNext-Regular', 'Avenir Next', sans-serif;font-size:12px; letter-spacing: 0.6px; opacity:.8">maÏa</text>
                </g>
              </g>
            </g>
          </svg>
        </div>
        <h3 class="text-center mb-5"><span class="underline-title inscription">Editer votre profil</span></h3>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>
          <div class="form-inputs">
            <%= f.input :email, label:false, placeholder:"Email", required: true, autofocus: true %>
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
            <% end %>
            <%= f.input :password,
                  label:false,
                  placeholder: "Password",
                  hint: "leave it blank if you don't want to change it",
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
            <%= f.input :current_password,
                  hint: "we need your current password to confirm your changes",
                  required: true,
                  input_html: { autocomplete: "current-password" } %>
            <%= f.input :photo, as: :file, label: 'Ajoutez votre photo', class: "form-control-file" %>
            <%= f.input :contrat, as: :file, label: 'Ajoutez un contrat type', class: "form-control-file" %>
          </div>
          <div class="form-actions text-center mt-4">
            <%= f.button :submit, "Valider", class: "shadow-sm p-2 px-3 mb-3 bg-white rounded-pill border-0" %>
          </div>
        <% end %>
        <div class="form-actions text-center mt-3 device-links">
          <%= link_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete%>
        </div>
      </div>
