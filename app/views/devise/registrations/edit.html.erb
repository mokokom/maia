<div class="containerr bg-pink" style=' width:100%; height:100vh; position:absolute; top:0'>
  <div class="container-fluid bg-pink">
    <div class="row justify-content-center">
      <div class="col-8">
       <h2 class="text-center mt-5 mb-5">ma√èa</h2>
             <h3 class="text-center mb-5"><span class="underline-title inscription">Editer votre profil</span></h3>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, label:false, placeholder:"Email", required: true, autofocus: true %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :password,
                  label:false,
                  placeholder: "Password",
                  hint: "leave it blank if you don't want to change it",
                  required: false,
                  input_html: { autocomplete: "new-password" } %>

      <%= f.input :current_password,
                  hint: "we need your current password to confirm your changes",
                  required: true,
                  input_html: { autocomplete: "current-password" } %>

      <%= f.input :photo, as: :file, class: "form-control-file" %>

      <%= f.input :contract, as: :file, class: "form-control-file" %>
    </div>

   <div class="form-actions text-center mt-5">
          <%= f.button :submit, "Valider", class: "shadow-sm p-2 px-3 mb-3 bg-white rounded-pill border-0"  %>
    </div>
  <% end %>

   <div class="form-actions text-center mt-3 device-links">
  <%= link_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete%>
   </div>
