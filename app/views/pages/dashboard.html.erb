<div class="container-fluid dashboard">
  <div class="row justify-content-md-center">
    <div class="col-12 col-md-6">
      <div class="card my-3">
        <div class="card-body">
          <div class="profile-container d-flex justify-content-between align-items-center mb-3">
            <h5 class="card-title">Bonjour <%= current_user.first_name %></h5>
            <% if current_user.photo.attached? %>
              <%= cl_image_tag current_user.photo.key, class: "avatar-kids", gravity: :face %>
              <% end %>
        </div>
        <p class="card-text">Une nouvelle journ√©e pour votre enfant!</p>
          <button href="#" class="shadow-sm py-1 px-3 bg-white rounded-pill border-0">carnet de liaison</button>
      </div>
    </div>
      <% if current_user.is_nanny %>
        <%= render 'shared/dashboardbabysit', babysit: @babysit, event: @event %>
      <% else %>
        <%= render 'shared/dashboardfamily' %>
      <% end %>
    </div>
  </div>
</div>
