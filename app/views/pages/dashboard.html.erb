<h1>Bonjour <%= current_user.first_name %></h1>

<br>
<br>

<p>****</p>
<p>menu</p>
<p><%=  link_to 'Mon profil(Editer)', edit_user_registration_path  %></p>
<p><%=  link_to 'Fiche profil enfants', kids_path %></p>


<% if current_user.is_nanny == true %>
    <% current_user.babysits.each do |babysit| %>
    <%=babysit.kid.first_name%>
  <% end %>


<% else %>

  <p><%=  link_to 'Fiche profil enfants', kids_path %></p>
  <p>****</p>
  <br>
  <br>

  <h2> mes kids</h2>
    <% current_user.kids.each do |kid| %>
    <%= kid.first_name %>
    <% kid.babysits.each do |babysit| %>
      <% if babysit.validated == false %>
        <p> en attente de validation</p>
      <% end %>
    <% end %>

    <% if kid.babysits.empty? %>
      <p>Ajouter une nounou à <%= kid.first_name %> </p>
      <p>Renseignez l'email de la nounou </p>

  <form action="/dashboard" class='form-inline'>

        <input type="text" name="email">
        <input type="submit" value='search' class="btn btn-primary">
    </form>

      <% if @result %>

        <%= @result.first_name %>

        <%= form_for([kid, @babysit]) do |f| %>
          <%= f.hidden_field :user_id, value: @result.id %>
          <%= f.submit %>
        <% end %>

        <% end %>
      <% end %>
    <br>
    <% end %>

  <br>
  <br>

  <div class="form-container">
    <div class="form-centered">
      <h2>Ajouter un enfant à votre tableau de bord</h2>
      <%= simple_form_for(@kid) do |f| %>

  <%= f.input :photo, as: :file %>
      <%= f.input :first_name %>
      <%= f.input :age %>
      <%= f.input :weight %>
      <%= f.button :submit  %>
      <% end %>
    </div>
  </div>


<% end %>

